@model CHAdmin.Models.loginModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Client/Views/Shared/_LayoutMaster.cshtml";
}


<div class="inner-header">
    <div class="container">
        <div class="pull-left">
            @*<h6 class="inner-title">Đăng nhập</h6>*@
        </div>
        <div class="pull-right">
            <div class="beta-breadcrumb">
                <a href="/Client/Home/Index">Home</a> / <span>Đăng nhập</span>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

<div class="container" style="padding-left:50px; padding-right:300px">
    <div id="content">

        <div class="row">
            <div class="col-sm-3"></div>

            @*@if (Session('loiLogin'))
                {
                    <div class="alert alert-dange">{{ Session('loiLogin') }}</div>
                }*@
        <div class="col-sm-6">
            @*<h4>Đăng nhập</h4>*@
            <div class="space20">&nbsp;</div>
            @if (Session["idKH"] != null)
            {
                <div class="alert alert">Đăng nhập thành công</div>
            }
            @using (Html.BeginForm())
            {
                if (Session["thongbao"] != null)
                {
                    @*<div class="alert alert-{{Session::get('flag')}}">{{Session::get('message')}}</div>*@

                    if ((string)Session["thongbao"] == "ok")
                    {
                        <div class="alert alert-success">@Session["thongbao"]</div>
                    }

                    if ((string)Session["thongbao"] == "fail")
                    {
                        <div class="alert alert-danger">@Session["thongbao"]</div>
                    }
                }
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Đăng nhập</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.userName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đăng nhập" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
            <div class="col-sm-3"></div>
        </div>
    </div> <!-- #content -->
</div> <!-- .container -->
