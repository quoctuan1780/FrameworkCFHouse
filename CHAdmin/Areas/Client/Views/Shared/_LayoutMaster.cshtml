    <script>
        function addCart(id){
            $.ajax({
                url: "/Client/Cart/Them1SP/" + id,
                method:"GET",
                data:{masp:id},
                success:function(data){
                    if(data == "ok")
                    swal({
					  title: "Thông báo",
					  text: "Thêm sản phẩm vào giỏ hàng thành công",
					  icon: "success",
					  button: "Ok",
					});
                }
            });
        }
    </script>
